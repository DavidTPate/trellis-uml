{
  "$id": "System.schema.json",
  "title": "Software System",
  "type": "object",
  "properties": {
    "name": {
      "type":"string"
    },
    "description": {
      "type": "string"
    },
    "location": {
      "type": "string",
      "enum": ["internal", "external"]
    },
    "containers": {
      "type": "object",
      "patternProperties": {
        ".*": {
          "$ref": "Container.schema.json"
        }
      }
    },
    "relationships": {
      "type": "array",
      "items": {
        "$ref": "ContainerReplationship.schema.json"
      }
    }
  },
  "required": ["name"]
}