{
  "$id": "Component.schema.json",
  "title": "Component",
  "type": "object",
  "if": {"required": ["$ref"]},
  "then": {
    "properties": {
      "$ref": {
        "type": "string",
        "format": "uri-reference"
      }
    }
  },
  "else": {
    "properties": {
      "kind": {
        "const": "Component"
      },
      "name": {
        "type":"string"
      },
      "type": {
        "type": "string",
        "enum": ["Controller", "Service", "Factory", "Facade", "Library"]
      },
      "description": {
        "type": "string"
      },
      "technology": {
        "type": "string",
        "enum": ["Java", "Spring", "Spring MVC"]
      },
      "elements": {
        "type": "object",
        "patternProperties": {
          ".*": {
            "$ref": "CodeElement.schema.json"
          }
        }
      },
      "relationships": {
        "type": "array",
        "items": {
          "$ref": "CodeElementRelationship.schema.json"
        }
      }
    },
    "required": ["kind", "name"]
  }
}
