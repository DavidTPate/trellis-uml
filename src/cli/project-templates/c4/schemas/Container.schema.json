{
  "$id": "Container.schema.json",
  "title": "Container",
  "type": "object",
  "if": {"required": ["$ref"]},
  "then": {
    "properties": {
      "$ref": {
        "$ref": "Reference.schema.json"
      }
    }
  },
  "else": {
  "properties": {
    "name": {
      "type":"string"
    },
    "description": {
      "type": "string"
    },
    "technology": {
      "type": "string"
    },
    "components": {
      "type": "object",
      "patternProperties": {
        ".*": {
          "$ref": "Component.schema.json"
        }
      }
    },
    "relationships": {
      "type": "array",
      "items": {
        "$ref": "ComponentRelationship.schema.json"
      }
    }
  },
  "required": ["name"]
}
}