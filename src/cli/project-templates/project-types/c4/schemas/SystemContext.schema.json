{
  "$id": "SystemContext.schema.json",
  "title": "System Context Model",
  "description": "A C4 model for System Context",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "people": {
      "type": "object",
      "patternProperties": {
        ".*": {
          "$ref": "Person.schema.json"
        }
      }
    },
    "systems": {
      "type": "object",
      "patternProperties": {
        ".*": {
          "$ref": "SoftwareSystem.schema.json"
        }
      }
    },
    "relationships": {
      "type": "array",
      "items": {
        "$ref": "SystemContextRelationship.schema.json"
      }
    }
  },
  "required": ["name", "people", "systems", "relationship"]
}